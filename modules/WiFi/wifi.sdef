commands:
{
    cm = tools:/bin/cm
    fwupdate = tools:/bin/fwupdate
    secstore = tools:/bin/secstore
    pmtool = tools:/bin/pmtool
    gnss = tools:/bin/gnss
    wifi = wifi:/bin/wifi
    uartMode = tools:/bin/uartMode
}

bindings:
{
    <root>.le_fwupdate -> fwupdateService.le_fwupdate
}

interfaceSearch:
{
    interfaces/modemServices
    interfaces/positioning
}
